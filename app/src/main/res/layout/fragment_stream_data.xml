<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="SensorViewModel"
            type="com.example.arproj.SensorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/stream_ar_fragment"
                class="com.example.arproj.view.CustomAugmentedImageArFragment"
                android:layout_width="match_parent"
                android:layout_height="550dp" />

            <ImageView
                android:id="@+id/tracking_state_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/red"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <com.google.android.material.button.MaterialButton
                android:text="Save"
                style="?materialButtonOutlinedStyle"
                android:textColor="@color/etri"
                android:layout_weight="1"
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:strokeWidth="2dp"
                app:strokeColor="@color/etri"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>